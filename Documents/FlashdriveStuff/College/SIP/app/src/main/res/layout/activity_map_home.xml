<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    style="@style/AppTheme"
    android:orientation="vertical" tools:context=".MapHome">

    <!--want these to be on the same line, at the top-->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" tools:context=".MapHome"
        android:weightSum="1"
        style="@style/AppTheme">
        <TextView android:text="@string/site_number" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:gravity="left" android:layout_gravity="left" android:layout_weight="1"/>
        <TextView android:text="@string/unit_number" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:gravity="right" android:layout_gravity="right"
            android:layout_weight="1"/>
    </LinearLayout>

    <!--a dynamically-changed (??) textbox with the unit's level-->
    <TextView android:text="@string/level_number" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_gravity="center"/>

    <!--an imageView which will show the selected image of the unit.-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:id="@+id/unitImgView"
        android:src="@drawable/image_prompt"/>

    <!--a button which will take the user to the select on image activity. Need to figure out how to get back****-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:id="@+id/select_on_image_button"
        android:hint="@string/button_hint"
        android:layout_gravity="center_horizontal"/>

    <!--a title textbox saying "unit description"-->
    <TextView android:text="Unit Description:" android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!--an edittext where the user will input the unit's description ***CHANGE STYLE***-->
    <EditText android:id="@+id/unit_description"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:inputType="textMultiLine"
        android:hint="Describe your unit here. Include a description of soil texture and color, depth, and features and artifacts."
        android:gravity="center"
        android:layout_weight="1"/>

</LinearLayout>
