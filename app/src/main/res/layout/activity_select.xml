    <ViewSwitcher
        android:id="@+id/switchDrawView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="start">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/errorTextDraw"
            android:text="@string/no_draw_hint"
            android:textSize="32dp"
            android:textColor="@color/colorPrimaryText"
            android:gravity="center"
            android:layout_gravity="center_vertical|center_horizontal"/>
        <com.mycompany.sip.DrawingView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/draw"
            android:layout_gravity="center_vertical|center_horizontal"
            />
    </ViewSwitcher>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_gravity="end"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Map"
            android:gravity="center"
            android:theme="@style/titleTheme"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_gravity="bottom">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Artifacts"
                android:layout_gravity="left"
                android:textSize="16dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add"
                android:layout_gravity="right"
                android:id="@+id/addArtifactButton"
                android:color="@color/colorText"
                />
            </LinearLayout>
        <ListView
            android:id="@+id/artifactListMap"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="3"
            android:layout_gravity="bottom">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Features"
                android:layout_gravity="left"
                android:textSize="16dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add"
                android:layout_gravity="right"
                android:id="@+id/addFeatureButton"
                android:color="@color/colorText"
                />
        </LinearLayout>
        <ListView
            android:id="@+id/featureListMap"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="4"/>
        </LinearLayout>
